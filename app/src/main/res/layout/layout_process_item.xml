<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <CheckBox
        android:id="@+id/cb_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_rect_selector"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_process_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:layout_toRightOf="@id/cb_process"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_process_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安卓管家"
        android:layout_toRightOf="@id/iv_process_icon"
        android:layout_alignTop="@id/iv_process_icon"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_process_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存：5.1.0M"
        android:layout_alignLeft="@id/tv_process_name"
        android:layout_alignBottom="@id/iv_process_icon"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/tv_process_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统进程"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_process_icon"
        android:textColor="#b64c4c"
        android:textSize="12sp"/>

</RelativeLayout>
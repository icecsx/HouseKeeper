<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <com.edu.nbl.housekeeper.view.ClearArcView
        android:id="@+id/cav_score"
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_score"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/iv_selector_score"/>
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/iv_score"
        android:layout_marginTop="38dp"
        android:text="20"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="75sp"/>
    <TextView
        android:id="@+id/tv_speedup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机加速"
        android:layout_alignBottom="@+id/iv_score"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:textColor="#fff"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="15sp"
        android:background="@drawable/tv_selector_speedup"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="%"
        android:layout_toEndOf="@+id/tv_score"
        android:layout_alignBaseline="@id/tv_score"/>

</RelativeLayout>
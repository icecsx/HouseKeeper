<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <CheckBox
        android:id="@+id/cb_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_rect_selector"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/cb_app"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系人"
        android:layout_toRightOf="@id/iv_app"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_app_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com.edu.nbl.housekeeper"
        android:layout_alignLeft="@id/tv_app_name"
        android:layout_alignBottom="@id/iv_app"
        android:layout_marginBottom="3dp"
        android:textColor="#000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v.1.1.1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textSize="12sp"
        android:maxLength="8"/>

</RelativeLayout>